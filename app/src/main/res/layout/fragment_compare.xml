<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pager_background">

       <android.support.v4.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:text="Existing ITEM"
                   android:textColor="@color/list_item_textcolor"
                   android:textSize="21dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/cardview_dark_background"
                   />
               <ListView
                   android:layout_width="match_parent"
                   android:layout_height="300dp"
                   android:id="@+id/lstExist"
                   android:nestedScrollingEnabled="true"
                   android:background="#29656C">
               </ListView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/cardview_dark_background"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:text="Extra ITEM"
                   android:textColor="@color/list_item_textcolor"
                   android:textSize="21dp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/cardview_dark_background"
                   />
               <ListView
                   android:layout_width="match_parent"
                   android:layout_height="300dp"
                   android:id="@+id/lstExtra"
                   android:nestedScrollingEnabled="true"
                   android:background="#29656C">
               </ListView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/cardview_dark_background"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:layout_marginTop="15dp">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:id="@+id/imgBtnSave"
                       android:src="@drawable/img_btn_save"/>
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:id="@+id/imgBtnCancel"
                       android:src="@drawable/img_btn_cancel1"/>
               </LinearLayout>
           </LinearLayout>
       </android.support.v4.widget.NestedScrollView>

</LinearLayout>