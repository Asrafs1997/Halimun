<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pager_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/lstSummary"
            android:background="#29656C">
        </ListView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:text="ADD More Items"
            android:id="@+id/btnAddItems"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:background="#1C464A"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#46878E"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:id="@+id/linSubCompany"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SubCompany"
                    android:textColor="#FFF"
                    android:paddingLeft="20dp"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="center|left"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:id="@+id/spnSubCompany"
                    android:background="@drawable/edt_bg_rect"
                    android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:id="@+id/linDiscount"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bill Discount"
                    android:textColor="#FFF"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="center|left"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:text="0"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/edtDiscount"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edt_bg_rect"
                    android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sub Total"
                    android:textColor="#FFF"
                    android:paddingLeft="20dp"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="center|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00.00"
                    android:id="@+id/txtSubtotal"
                    android:textColor="@color/list_item_textcolor"
                    android:textSize="22sp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center|right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tax "
                    android:id="@+id/txtTaxPerc"
                    android:textColor="#FFF"
                    android:paddingLeft="20dp"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="center|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00.00"
                    android:textColor="@color/list_item_textcolor"
                    android:paddingRight="10dp"
                    android:textSize="22sp"
                    android:id="@+id/txtTax"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center|right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Net Total"
                    android:textColor="#FFF"
                    android:paddingLeft="20dp"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:textStyle="bold|italic"
                    android:gravity="center|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00.00"
                    android:textColor="@color/list_item_textcolor"
                    android:paddingRight="10dp"
                    android:id="@+id/txtNetTotal"
                    android:textSize="22sp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center|right"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imgBtnSave"
                android:src="@drawable/img_btn_save"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imgBtnCancel"
                android:src="@drawable/img_btn_cancel1"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>