<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="top"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="5dp"
    android:background="#FFF">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/tangtea_1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:id="@+id/imgDish"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <RatingBar
            android:id="@+id/dishRating"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="4"
            android:visibility="gone"
            android:layout_below="@+id/imgDish"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Dish Name"
            android:id="@+id/txtDishName"
            android:textColor="#000"
            android:textSize="20sp"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/imgDish"
            android:layout_below="@+id/txtDishName"
            android:text="Spring Rolls"
            android:id="@+id/txtDishDesc"
            android:visibility="gone"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtDishName"
            android:text="S$ 20.00"
            android:id="@+id/txtDishPrice"
            android:singleLine="true"
            android:textColor="@color/text_brown"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/txtDishName"
            android:layout_marginLeft="5dp"
            android:id="@+id/imgMinus"
            android:src="@drawable/cart_minus"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/imgMinus"
            android:background="@drawable/box"
            android:text="0"
            android:textColor="@color/text_orange"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/edtCount"
            android:inputType="number"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/edtCount"
            android:id="@+id/imgPlus"
            android:src="@drawable/cart_add"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cart_inactive"
            android:padding="5dp"
            android:id="@+id/imgCart"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
